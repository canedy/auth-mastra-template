# Copy this to .env and fill in your values

# =============================================================================
# AUTH CONFIGURATION
# =============================================================================

# OpenAI API Key
# Your OpenAI API key for authentication
OPENAI_API_KEY=your-openai-api-key

# AGENT_ID
# Your unique agent identifier
AGENT_ID=agent://demo/a1

# KID
# Your unique key identifier that is used for signing
KID=your-key-id

# =============================================================================
# HELPDESK AGENT CONFIGURATION
# =============================================================================

# Path to the private JWK file for the helpdesk agent
# This file contains the private key used for signing JWTs
HELPDESK_PRIVATE_JWK_PATH=/path/to/your/private.jwk.json

# Unique agent ID for the helpdesk agent
# Format: agent://domain/agent-name
HELPDESK_AGENT_ID=agent://demo/a1

# Token service URL for authentication
# The endpoint where the agent exchanges assertions for access tokens
TOKEN_SERVICE_URL=http://localhost:3001

# Token service JWKS URL
# The endpoint to fetch public keys for JWT verification
TOKEN_SERVICE_JWKS_URL=http://localhost:8787/.well-known/jwks.json
